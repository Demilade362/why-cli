{
  "name": "why-analysis-cli",
  "version": "1.0.1",
  "description": "Explain why a file exists in a repo by showing who uses it and its git origin.",
  "type": "module",
  "bin": {
    "why": "dist/index.js"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "link": "npm run build && npm link"
  },
  "keywords": [
    "cli",
    "codebase",
    "analysis",
    "why",
    "import",
    "dependency",
    "developer-tool"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Demilade362/why-analysis-cli.git"
  },
  "homepage": "https://github.com/Demilade362/why-analysis-cli#readme",
  "bugs": {
    "url": "https://github.com/Demilade362/why-analysis-cli/issues"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.2",
    "picocolors": "^1.1.1"
  },
  "publishConfig": { "access": "public" },
  "preferGlobal": true,
  "author": "Demilade362",
  "devDependencies": {
    "@types/node": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0"
  }
}
